{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/.output/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/_nuxt/(.*)",
      "dest": "frontend/.output/public/_nuxt/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "frontend/.output/public/img/$1"
    },
    {
      "src": "/(favicon.ico|robots.txt)",
      "dest": "frontend/.output/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}